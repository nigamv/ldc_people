  <dd><%= @part_timer.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:language1) %>:</strong></dt>
  <dd><%= @part_timer.language1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dialect1) %>:</strong></dt>
