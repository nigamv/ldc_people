  <dd><%= @part_timer.first_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pennkey) %>:</strong></dt>
  <dd><%= @part_timer.pennkey %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lui_username) %>:</strong></dt>
  <dd><%= @part_timer.lui_username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:havic_userID) %>:</strong></dt>
  <dd><%= @part_timer.havic_userID %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alternate_email) %>:</strong></dt>
  <dd><%= @part_timer.alternate_email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:job_title) %>:</strong></dt>
  <dd><%= @part_timer.job_title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:level) %>:</strong></dt>
  <dd><%= @part_timer.level %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fy_hours) %>:</strong></dt>
  <dd><%= @part_timer.fy_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:average_weekly_hours) %>:</strong></dt>
  <dd><%= @part_timer.average_weekly_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_raise) %>:</strong></dt>
